{
    "compilerOptions": {
        "declaration":            true,
        "moduleResolution":       "Node",
        "module":                 "commonjs",
        "outDir":                 "./build",
        "lib":                    [
            "es6"
        ],
        "types":                  [
            "node",
            "reflect-metadata"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata":  true,
        "pretty":                 true,
        "target":                 "ES6",
        "noImplicitAny":          false,
        "sourceMap":              true,
        "skipLibCheck":           true
    },
    "include":         [
        "src/**/*.ts"
    ],
    "exclude":         [
        "node_modules"
    ]
}
